<p>
  <button aria-controls="new_message" aria-expanded="false" class="btn btn-primary" data-target="#new_message" data-toggle="collapse" type="button">
    New message
  </button>

  <div class="collapse" id="new_message">
    <div class="card card-block">
      <%= form_for message, remote: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :recipients %>
          <br/>
          <%= f.select :recipient_ids, users_except_current, {}, class: 'form-control select2-tags',  multiple: true %>
        </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>

        <div class="form-check">
          <label class="form-check-label">
            <%= f.check_box :draft, class: 'form-check-input' %>Draft?
          </label>
        </div>

        <div class="form-group">
          <%= f.submit 'Send', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</p>
